/* pages/coin/coinDetai/coinDetai.wxss */
page {
  background-color: #f5f5f5;
}
.clearfix:after {
  content: ".";
  display: block;
  height: 0;
  clear: both;
  visibility: hidden;
}
.header-bgc {
  height: 440rpx;
  background-image: url(https://shop.chongzhi.sg/static/miniprogram/bg.png);
  background-size: 100%;
}
.header-box {
  display: flex;
  justify-content: space-between;
  align-items: center;
 padding: 30rpx 40rpx 20rpx 0;

}
.header-img-left {
 width: 240rpx;
 height: 80rpx;
 background-color: #f8596b;
}
.left-img,
.right-img,
.currency-img,
.prodct-img,
.need-img,
.right-right-img,
.close-btn-img,
.exchange-img {
  width: 100%;
}
.header-img-right {
  width: 40rpx;
  height: 40rpx;
}
.currency {
  display: flex;
  align-items: flex-end;
  justify-content: center;
}
.currency-img-box {
  width: 100rpx;
  height: 100rpx;
}
.currency-number {
  font-size: 60rpx;
  color: #fff;
  margin: 0 10rpx;
}
.currency-quantity {
  font-size: 32rpx;
  color: #fff;
}
.cla {
  display: flex;
  font-size: 30rpx;
  color: #fff;
  margin-top: 110rpx;
  justify-content: space-between;
  background-color: rgba(255, 255, 255, .2);
  padding: 18rpx 70rpx 18rpx 10rpx;
}
.expect {
  padding: 12rpx 10rpx ;
  border-right: 1px solid rgba(255, 255, 255, .6);
}
.grade {
  padding: 14rpx 0 ;
}
.conversion {
  padding: 30rpx;
  font-size: 32rpx;
  font-weight: 700;
  color: #535e7c;
}
.product {  
  padding: 40rpx;
  background: #fff;
}
.prodct-box {
  display: flex;
}
.prodct-box-left {
  position: relative;
  top: 0;
  display: flex;
  line-height: 100rpx;
  width: 22%;
  border: 1px solid #d5d8e1;
  border-radius: 8px;
  justify-content: center;
  margin: 0 2%;
  color: #9a9fae;
  font-size: 28rpx;
}
.active {
  color: #ff5266;
  border: 1px solid #ff5266;
}
.active::after {
  content: '';
  position: absolute;
  bottom: 0;
  right: 0;
  width: 40rpx;
  height: 40rpx;
  background-image: url(https://shop.chongzhi.sg/static/miniprogram/choice-in.png);
  background-size: 100%;
}
.active::before {
  content: '';
  position: absolute;
  top: 26rpx;
  right: 90rpx;
  width: 40rpx;
  height: 40rpx;
  background-image: url(https://shop.chongzhi.sg/static/miniprogram/choice-in.png);
  background-size: 100%;
}
.prodct-img-box {
  width: 30rpx;
  height: 30rpx;
  margin-right: 10rpx;
  line-height: 106rpx;
}
.prodct-text {
  color: #9a9fae;
  font-size: 28rpx;
  vertical-align: middle;
  margin-left: 6rpx;
}
.need {
  padding: 24rpx;
  background: #fff;
}
.need-box {
  display: flex;
  justify-content: space-between;
  line-height: 60rpx;
  padding: 0 8rpx;
}
.need-left {
  color: #ff9162;
  font-size: 30rpx;
}
.need-right {
  color: #f45f5d;
    font-size: 28rpx;
}
.need-img-box {
  width: 100%;
  height: 30rpx;
  margin-bottom: 30rpx;
}
.history-box-profile {
  padding: 30rpx;
}
.item-history-profile{
  margin-bottom: 30rpx;
  background: #ffffff;
  border-radius: 20rpx;
  padding: 20rpx;
}

.left-profile{
  position: relative;
  float: left;
  width: 168rpx;
  height: 126rpx;
  border: .5px solid #d2d2d2;
  border-radius: 5px;
}
.left-profile-img{
  position: absolute;
  right: 0;
  left: 0;
  margin: 20rpx auto 0;
  width: 80rpx;
  border-radius: 10rpx;
  border: 1px solid #eee;
}

.right-profile{
  margin-left: 180rpx;
  line-height: 50rpx;
  font-size: 30rpx;
}

.right-right-box{
  display: flex;
  margin-top: 10rpx;
  align-items: center;
}
.right-right-box-img {
  width: 60rpx;
  height: 60rpx;
}
.p-status {
  color: #9a9fae;
  font-size: 30rpx;
  margin-left: 8rpx;
  line-height: 80rpx;
  align-self: end;
}
.exchange-box {
  float: right;
  width: 140rpx;
  line-height: 70rpx;
  margin-top: -84rpx;
  background: #ff5569;
  border-radius: 20px;
  text-align: center;
}
.exchange-btn {
  color: #fff;
  font-size: 30rpx;
}
.coin-desc {
  position: fixed;
  top: 0%;
  right: 0%;
  width: 100%;
  height: 100%;
  box-sizing: border-box;
  z-index: 600;
  transform: translate(100%, 0);
  opacity: 0;
  transition: all .5s ease;
  background-color: #fff;
}
.close-btn {
  float: right;
  width: 40rpx;
  height: 40rpx;
  margin-right: 20rpx;
  margin-top: 20rpx;
}
.coin-desc-content {
  padding: 20rpx;
  margin-top: 80rpx;
}
p {
  line-height: 60rpx;
  height: auto;
  color: #333;
  font-size: 30rpx;
}
.content-title {
  color: #bc523c;
  font-size: 30rpx;
}
.coin-desc-show {
  opacity: 1;
  transform: translate(0, 0);
}
.exchange-coin {
  max-width: 1280rpx;
  position: fixed;
  display: none;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  margin: auto;
  width: 80%;
  height: 600rpx;
  background: #fff;
  z-index: 600;
}
.exchange-info {
  margin-top: 86.66rpx;
  padding: 0 40rpx 0 40rpx;
  height: auto;
}
.exchange-goods-item, .user-phone-info {
  line-height: 86.66rpx;
  font-size: 30rpx;
}
.goods-pid {
  color: #ff5569;
}
.phone-prefix {
  display: table-cell;
  height: 80rpx;
  line-height: 80rpx;
  font-size: 30rpx;
  font-weight: bold;
  color: #333;
  border-left: 1px solid #eee;
  border-top: 1px solid #eee;
  border-bottom: 1px solid #eee;
  text-align: center;
  width: 80rpx;
}
.user-phone-info {
  height: 80rpx;
  line-height: 80rpx;
  width: 100%;
  display: table;
}
.input-div {
  line-height: 80rpx;
  border: 1px solid #eee;
}
.phone-input {
  width: 100%;
  text-indent: 60rpx;
  height: 80rpx;
  line-height: 80rpx;
  border: 0;
  outline: none;
  -webkit-appearance: none;
}
.exchange-btn-div {
  padding: 40rpx 0;
  text-align: center;
}
.exchange-btn {
  border-radius: 10px;
  font-size: 30rpx;
  width: 100%;
  height: 80rpx;
  line-height: 80rpx;
  margin: auto;
  background: #ff5569;
  border: 0;
  color: #fff;
}
.exchange-coin-show {
  display: block;
}
.exchange-coin-close {
  float: right;
  width: 40rpx;
  height: 40rpx;
  margin: 20rpx 20rpx 0 0;
}
/* pages/coin/team/team.wxss */
page {
  background-color: #f5f5f5;
}
.team-header {
  width: 100%;
  height: 364rpx;
  background-image: url(https://shop.chongzhi.sg/static/miniprogram/bg.png);
  background-size: 100%;
}
.my-team {
  padding: 30rpx 40rpx 20rpx;
  font-size: 32rpx;
  line-height: 80rpx;
  color: #fff;
}
.team-message {
  display: flex;
  align-items: center;
  justify-content: center;
}
.team-img-box {
  width: 70rpx;
  height: 70rpx;
}
.team-img,
.pocket-icon-img {
  width: 100%;
}
.team-box-text {
  padding-left: 20rpx;
    line-height: 80rpx;
    font-size: 32rpx;
    color: #fff;
}
.team-quantity {
  margin-right: 10rpx;
  font-size: 44rpx;
}
.acquisition {
  padding: 30rpx;
  font-size: 32rpx;
  font-weight: 700;
  color: #535e7c;
}
.gift-list-container{
  padding: 20rpx;
  background: #ffffff;
}   
.item-gift{
  padding: 20rpx 0;
  border-bottom: 1px solid #f6f6f6;
}
.pocket-icon{
  float: left;
  width: 100rpx;
  height: 100rpx;
}   
.item-content{
  margin-left: 120rpx;
  margin-right: 120rpx;
}
.item-title{
  color: #333333;
  font-weight: bold;
  font-size: 32rpx;
  line-height: 60rpx;
}
.item-desc{
  color: #999999;
  font-size: 30rpx;
}
.item-right{
  float: right;
  margin-top: -86rpx;
  font-size: 32rpx;
  color: #999999;
}

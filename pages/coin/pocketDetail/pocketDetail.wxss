page {
  background-color: #f5f5f5;
}
.clearfix:after {
  content: ".";
  display: block;
  height: 0;
  clear: both;
  visibility: hidden;
}
.tab-h {
  width: 100%;
  box-sizing: border-box;
  overflow: hidden;
  line-height: 80rpx;
  background-color: #f5f5f5;
  font-size: 16px;
  white-space: nowrap;
  z-index: 99;
}

.tab-item {
  margin: 0 50rpx;
  display: inline-block;
  color: #c8c9cb;
}

.tab-item.active {
  color: #ff5266;
  position: relative;
}

.tab-item.active:after {
  content: "";
  display: block;
  height: 8rpx;
  width: 100%;
  background: #ff5266;
  position: absolute;
  bottom: 0;
  border-radius: 16rpx;
}

.avatar {
  position: relative;
}

.actives {
position: relative;
  color: #ff5266;
  border: 1px solid #ff5266;
}
.actives::after {
  content: '';
  position: absolute;
  bottom: 0;
  right: 0;
  width: 40rpx;
  height: 40rpx;
  background-image: url(https://shop.chongzhi.sg/static/miniprogram/choice-in.png);
  background-size: 100%;
}
.pocket-list-container{
  padding: 20rpx;
}
.li{
  position: relative;
  background: #ffffff;
  padding: 20rpx;
  border-radius: 5px;
  margin-bottom: 20rpx;
}
.left-profile{
  float: left;
  width: 180rpx;
  height: 180rpx;
}
.item-box{
  padding: 86rpx 20rpx 0 20rpx;
  color: #ffb647;
  text-align: center;
}
.item-amount{
  font-size: 30rpx;
  font-weight: bold;
}
.item-type{
  font-size: 26rpx;
}
.item-content{
  margin-left: 200rpx;
  margin-right: 180rpx;
}
.title{
  font-size: 30rpx;
  font-weight: bold;
  line-height: 50rpx;
  color: #4c505b;
}
.pocket-msg{
  font-size: 28rpx;
  color: #999999;
  line-height: 50rpx;
}
.right-profile{
  float: right;
  background:#ff5266;
  border-radius: 20px;
  color: #ffffff;
  padding: 16rpx 34rpx;
  font-size: 28rpx;
  margin-top: -90rpx;
}
.used{
  background: #cecece;
}
.warn {
  color: #f3503c;
}
.expire-warn::before{
  content: '';
  position: absolute;
  width: 80rpx;
  height: 80rpx;
  top: 0;
  right: 0;
}
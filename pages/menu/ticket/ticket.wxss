/* pages/menu/ticket/ticket.wxss */
page {
  background-color: #f5f5f5;
}
.search {
  display: flex;
  width: 100%;
  height: 100rpx;
  background-color: #fff;
  align-items: center;
  margin: 5px 0 10px;
}
.search-img {
  float: left;
  width: 20px;
  height: 20px;
  padding: 0 10px;
  line-height: 50px;
}
.search-input-box {
  flex: 3;
  width: 100%;
}
.tab-h {
  width: 100%;
  box-sizing: border-box;
  overflow: hidden;
  line-height: 80rpx;
  background: #fff;
  font-size: 16px;
  white-space: nowrap;
  z-index: 99;
}
.tab-item {
  margin: 0 34rpx;
  display: inline-block;
  color: #c8c9cb;
}

.tab-item.active {
  color: #ff5266;
  position: relative;
}
.tab-item.active:after {
  content: "";
  display: block;
  height: 8rpx;
  width: 100%;
  background: #ff5266;
  position: absolute;
  bottom: 0;
  border-radius: 16rpx;
}
.item-ans {
  display: flex;
  flex-grow: row no-wrap;
  margin: 20rpx 30rpx;
  box-sizing: border-box;
  margin-bottom: 10px;
  border-bottom: 1px solid #F2F2F2;
  background-color: #fff;
  border-radius: 10px;
}
.avatar .avatar-img {
  width: 140px;
  height: 98px;
}
.avatar-img {
  justify-content: center;
  border-radius: 10px 0 0 10p x;
}
.avatar .doyen {
  width: 40rpx;
  height: 40rpx;
  position: absolute;
  bottom: -2px;
  right: 20rpx;
}
.expertInfo {
  color: #B0B0B0;
  margin-left: 40rpx;
  padding: 10px 0;
} 
 .expertInfo-name {
  font-size: 16px;
  font-weight: 700;
  color: #000;
  margin-bottom: 20px;
  border-radius: 60rpx;
}
.expertInfo-btn {
  display: inline-block;
  width: 100px;
  height: 30px;
  background: #ff5669;
  color: #fff;
  border-radius: 20px;
  text-align: center;
  line-height: 20rpx;
}
.scoll-h {
  height: 100%;
}
swiper {
  height: 1500rpx;
}
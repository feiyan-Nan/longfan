                          <view class="item-setmeal item-sell {{actTab==4?'actives':''}}" data-actTab="4" bindtap="pitchList">
                                超值中国$22 
                                <view class="avatar-img-box-sell">
                                  <image class="avatar-img" src="../../../../assets/images/pre-hot-icon.png" mode="widthFix"/>
                          </view>                              
                          </view>

                          <view class="item-setmeal {{actTab==5?'actives':''}}" data-actTab="5" bindtap="pitchList">
                                MyanmarSaver$23                                
                          </view>

                          <view class="item-setmeal {{actTab==6?'actives':''}}" data-actTab="6" bindtap="pitchList">
                                LocalSaver$18                               
                          </view>
                      </view>
                      <block>
                        <view class="footer-conter">
                          <view class="footer-conter-box">

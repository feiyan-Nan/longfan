                            <view class="footer-conter-bottom">
                              <view class="hint">温馨提示:</view>
                              <view class="hint-conter">
                              <text class="">sapasdf[jsdflkslkdfjlksdjfsdlf=gdkjfg</text>
                              </view >
                            </view>
                          </view>
                        </view>
                      </block>
        </swiper-item>
        <!-- 套餐 -->
        <swiper-item class="">
                          <view class="item-ans clearfix currentTab == 1 " hidden="{{conterShow}}">
                    <view class="avatar">
                          <view class="item-setmeal {{actTab==0?'actives':''}}" data-actTab="0" bindtap="pitchList">
                                7天1GB                                
                          </view>

                          <view class="actives-box">
                              </view>
                          </view>

                          <view class="item-setmeal {{actTab==1?'actives':''}}" data-actTab="1" bindtap="pitchList">

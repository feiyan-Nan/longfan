<view class="prepaidDetail">
  <view class=".header-container">
    <view class="header-img-box">
      <image class="header-img" src="../../../../assets/images/pre-sgst-bg.png" mode="widthFix" />
    </view>
    <view class="header-img-left">
      <image class="header-img" src="../../../../assets/images/singtel_1.png" mode="widthFix" />
    </view>
    <view class="header-img-right">
      <image class="header-img" src="../../../../assets/images/singtel-banner.png" mode="widthFix" />
    </view>
  </view>
    
    <view class="mobile-container">
      <view class="mobile">
        <view class="mobile-box-area">
          <text class="mobile-area">+65</text>
        </view>
        <view class="mobile-box-input">
          <input class="mobile-input" type="number" placeholder="请输入手机号码" placeholder-class="mobile-input"></input>      
        </view>
      </view>
    </view>
      
  <view class="select-container">
     <view class="select">
    <view class="select-img-box">
      <image class="select-img" src="../../../../assets/images/pre-goods-prefix.png" mode="widthFix" />      
    </view>
    <text class="select-text">选择产品</text>
  </view>
      
    <view class="tab">
      <scroll-view scroll-x="true" class="tab-h" scroll-left="{{scrollLeft}}">
          <view class="tab-item {{currentTab==0?'active':''}}" data-current="0" bindtap="swichNav">话费</view>
          <view class="tab-item {{currentTab==1?'active':''}}" data-current="1" bindtap="swichNav">套餐</view>
          <view class="tab-item {{currentTab==2?'active':''}}" data-current="2" bindtap="swichNav">流量</view>
      </scroll-view>
      <swiper class="tab-content" current="{{currentTab}}" duration="300">
       <!-- 话费 -->
        <swiper-item class="{{currentTab == 0}}">
            <scroll-view scroll-y="{{true}}">
              <!--  <block wx:for="{{[1,2,3]}}" wx:key="*this"> -->
                      <view class="item-ans clearfix">
                          <view class="avatar">
                              <view class="item-avatar {{actTab==0?'actives':''}}" data-actTab="0" bindtap="pitchList">
                                主账户$10                                
                              </view>
                              <view class="avatar-img-box">
                                  <image class="avatar-img" src="../../../../assets/images/pre-hot-icon.png" mode="widthFix"/>
                              </view>
                              <view class="actives-box">
                              </view>
                          </view>

                          <view class="item-avatar {{actTab==1?'actives':''}}" data-actTab="1" bindtap="pitchList">
                                主账户$5                                
                          </view>

                          <view class="item-avatar {{actTab==2?'actives':''}}" data-actTab="2" bindtap="pitchList">
                                主账户$20                                
                          </view>

                          <view class="item-avatar {{actTab==3?'actives':''}}" data-actTab="3" bindtap="pitchList">
                                主账户$25                                
                          </view>

                          <view class="item-avatar {{actTab==4?'actives':''}}" data-actTab="4" bindtap="pitchList">
                                主账户$50                               
                          </view>
                      </view>

              <!--  </block> -->
                <view class="footer-conter">
                  <view class="footer-conter-box">
                    <view class="footer-conter-top">
                      <view class="item-text">11111111</view>
                      <view class="item-text">22222222</view>
                      <view class="item-text">33333333</view>
                      <view class="item-text">44444444</view>

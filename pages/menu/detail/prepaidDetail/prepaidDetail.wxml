                      <view class="item-text">00000000</view>
                    </view>
                    <view class="footer-conter-bottom">
                      <view class="hint">温馨提示:</view>
                      <view class="hint-conter">
                      <text class="">sapasdf[jsdflkslkdfjlksdjfsdlf=gdkjfg</text>
                      </view >
                    </view>
                  </view>
                </view>
            </scroll-view>
        </swiper-item>
      
        <!-- 套餐 -->
        <swiper-item class="{{ currentTab == 1}}">
              <view class="item-ans clearfix currentTab == 1 " hidden="{{conterShow}}">
                    <view class="avatar">
                          <view class="item-setmeal {{actTab==0?'actives':''}}" data-actTab="0" bindtap="pitchList">
                                HOT$55                                
                          </view>

                          <view class="actives-box">
                              </view>
                          </view>

                          <view class="item-setmeal {{actTab==1?'actives':''}}" data-actTab="1" bindtap="pitchList">
                                SuperHot$128                                
                          </view>

                          <view class="item-setmeal {{actTab==2?'actives':''}}" data-actTab="2" bindtap="pitchList">
                                Bonus$30                                
                          </view>

                          <view class="item-setmeal item-sell {{actTab==3?'actives':''}}" data-actTab="3" bindtap="pitchList">
                                RedHot$30 
                                <view class="avatar-img-box-sell">
                                  <image class="avatar-img" src="../../../../assets/images/pre-hot-icon.png" mode="widthFix"/>
                          </view>                              

page {
  background-color: #f5f5f5;
  height: 100%;
}
.clearfix:after {
  content: ".";
  display: block;
  height: 0;
  clear: both;
  visibility: hidden;
}
.header-container,
.header-img,
.select-img,
.scoll-h,
image,
.avatar-img {
  width: 100%;
}
.header-img-left {
  position: absolute;
  top: 4%;
  left: 10%;
  width: 200rpx;
  height: 125rpx;
}
.header-img-right {
  position: absolute;
  top: 5%;
  right: 21%;
  width: 250rpx;
  height: 120rpx;
}
.mobile-container {
  position: absolute;
  width: 90%;
  padding: 0 5%;
  top: 238rpx;
  left: 0;
}
.mobile {
  background: #fff;
  width: 100%;
  height: 124rpx;
  border-radius: 13px;
  display: table;
  box-shadow: 20px 21px 40px #e6eaf4;
  line-height: 124rpx;
}
.mobile-box-area {
  display: table-cell;
  width: 20%;
}
.mobile-area {
  margin-left: 20rpx;
}
.mobile-input {
  width: 80%;
  height: 42rpx;
}
.select-img-box {
  display: inline-block;
  width: 25px;
  height: 25px;
  vertical-align: middle;
  margin: 0 20rpx 0 30rpx;
}
.select-container {
  margin-top: 100rpx;
}
.select {
  padding: 30rpx 0;
  background-color: #fff;
}
.tab-h {
  width: 100%;
  box-sizing: border-box;
  overflow: hidden;
  line-height: 80rpx;
  background-color: #f5f5f5;
  font-size: 16px;
  white-space: nowrap;
  z-index: 99;
}
.tab-item {
  margin: 0 92rpx;
  display: inline-block;
  color: #c8c9cb;
}
.tab-item.active {
  color: #ff5266;
  position: relative;
}
.tab-item.active:after {
  content: "";
  display: block;
  height: 8rpx;
  width: 100%;
  background: #ff5266;
  position: absolute;
  bottom: 0;
  border-radius: 16rpx;
}
.item-ans {
  padding: 2% 3%;
  background-color: #fff;
}
.avatar {
  position: relative;
}
.item-avatar {
  width: 31%;
  float: left;
  height: 80rpx;
  text-align: center;
  line-height: 80rpx;
  color: #9a9fae;
  border: 1px solid #d6d8e1;
  border-radius: 16rpx;
  margin: 12rpx 6rpx;
}
.item-setmeal {
  width: 47.7%;
  float: left;
  height: 80rpx;
  text-align: center;
  line-height: 80rpx;
  color: #9a9fae;
  border: 1px solid #d6d8e1;
  border-radius: 16rpx;
  margin: 12rpx 6rpx;
}
.item-sell {
position: relative;
}
.avatar-img-box {
  position: absolute;
  top: 0;
  left: 188rpx;
  width: 80rpx;
  height: 50rpx;
}
.avatar-img-box-sell {
  position: absolute;
  top: -16rpx;
  left: 272rpx;
  width: 80rpx;
  height: 50rpx;
}
swiper {
  height:1400rpx;
}
.actives {
  position: relative;
  color: #ff5266;
  border: 1px solid #ff5266;
}
.actives::after {
  content: '';
  position: absolute;
  bottom: 0;
  right: 0;
  width: 40rpx;
  height: 40rpx;
  background-image: url(https://shop.chongzhi.sg/static/miniprogram/choice-in.png);
  background-size: 100%;
}
.footer-conter {
  padding: 40rpx 30rpx 140rpx;
  background: #fff;
}
.footer-conter-box {
  background: #f7f7f7;
  padding: 0rpx 20rpx 300rpx;
  border-radius: 5px;
}
.item-text {
  margin: 16rpx 0;
  color: #9a9fae;
  font-size: 30rpx;
}
.hint {
  color: rgb(244, 88, 88);
  font-family: 微软雅黑, "Microsoft YaHei";
  margin: 60rpx 0 20rpx;
  font-weight: 700;
}
.hint-conter {
  display: flex;
  color: rgb(244, 88, 88);    
}
.footer-btn-box {
  position: fixed;
  bottom: 60rpx;
  left: 0;
  right: 0;
  margin: 0 auto;
  width: 90%;
  text-align: center;
}
.footer-btn {
  font-size: 32rpx;
  line-height: 80rpx;
  background: #ff5266;
  color: #fff;
  border-radius: 5px;
}

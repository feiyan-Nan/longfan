/* pages/menu/phonecard/phonecard.wxss */
.clearfix:after {
  content: ".";
  display: block;
  height: 0;
  clear: both;
  visibility: hidden;
}
.swiper {
  margin-bottom: 60rpx;
}
.swiper-img {
  width: 750rpx;
  height: 360rpx;
}
.phonecard-text-box {
  text-align: center;
  margin: 40rpx 0;
}
.phonecard-headline {
  text-align: center;
  color: #9a9fae;
  font-size: 32rpx;
}
.phonecard-item {
  float: left;
  width: 45%;
  text-align: center;
  margin: 20rpx 10rpx;
}
.phonecard-img-box {
  width: 282rpx;
  height: 186rpx;
  margin: 0 auto;
}
.phonecard-img {
  width: 100%;
  height: 100%;
  margin: 0 auto;
  padding: 20rpx 20rpx 60rpx;
}
.phonecard-text {
  display: inline-block;
  font-size: 24rpx;
  margin: 30rpx 0 0 40rpx;
  font-weight: 700;
  color: #f95266;
}
.phonecard-img.active {
  border: 1px solid #f95266;
  border-radius: 10px;
}
.particulars {
  margin: 30rpx 0 80rpx 0;
}
.particulars-btn {
  float: left;
  width: 92%;
  height: 60rpx;
  background-color: #f95266;
  color: #fff;
  border-radius: 5px;
  border: none;
  font-size: 32rpx;
  line-height: 60rpx;
  margin-left: 32rpx;
  text-align: center;
}
.confirm-box {
  width: 100%;
  height: 100%;
  position: fixed;
  z-index: 1000;
  left: 0;
  top: 0;
  background-color: rgba(0, 0, 0, 0.4);
}
.confirm {
  width: 680rpx;
  height: 95%;
  background-color: #fff;
  font-size: 28rpx;
  margin: 40rpx auto;
}
.header {
  max-width: 92%;
}
.header-left {
  position: relative;
  height: 80rpx;
  margin-bottom: 36rpx;
}
.header-left-text {
  float: left;
  line-height: 80rpx;
  font-size: 40rpx;
  margin-left: 40rpx;
  font-weight: 800;
  color: #e35b51;
}
 .header-left-img-box {
  position: fixed;
  right: 20rpx;
  top: 34rpx;
  width: 60rpx;
  height: 60rpx;
  margin: 20rpx 30rpx;
 }
 .header-left-img {
   width: 30px;
   height: 30px;
 }

.subscriber {
  margin-left: 28rpx;
}
.placeholder {
  font-size: 28rpx;
  color: #9a9fae;
}
input {
  width: 92%;
  height: 60rpx;
  margin: 0 0 20rpx 0;
  padding-left: 20rpx;
  outline: none;
  -webkit-appearance: none;
  border: 1px solid #9a9fae;
  border-right: 1px solid #9a9fae;
}
textarea {
  width: 92%;
  height: 100rpx;
  margin: 0 0 20rpx 0;
  padding: 20rpx 0 0 20rpx;
  outline: none;
  -webkit-appearance: none;
  border: 1px solid #9a9fae;
}
.male {
  position: relative;
  margin-top: 40rpx;
  font-size: 30rpx;
  align-items: center;
}
.male-hot {
  position: absolute;
  top: -10rpx;
  left: 26rpx;
  }
.read-box {
  margin: 0 0 10rpx 54rpx;
}
.read {
  color: #f95266;
}
.male .active::before {
  background-color: #f95266;
  background-clip: content-box;
}
radio .wx-radio-input.wx-radio-input-checked::before {
  border-radius: 50%;
  width: 12rpx;
  height: 12rpx;
  text-align: center;
  font-size: 0rpx;
  background-color: #f95266;
  transform: translate(-50%, -50%) scale(1);
  -webkit-transform: translate(-50%, -50%) scale(1);
}
radio {
  border-radius: 50%;
  width: 20rpx;
  height: 20rpx;
  border: 1px solid #f95266;
  font-size: 0;
}
radio .wx-radio-input {
  border-radius: 50%;
  width: 20rpx;
  height: 20rpx;
  border: none;
}
.purchase-btn {
  width: 100%;
  height: 60rpx;
  margin-bottom: 40rpx;
  text-align: center;
}
.purchase {
  width: 92%;
  height: 60rpx;
  background-color: #f95266;
  color: #fff;
  border-radius: 10rpx;
  border: none;
  font-size: 32rpx;
  line-height: 60rpx;
  margin-left: 28rpx;
}
.attention {
  text-align: center;
  padding-bottom: 80rpx;
}
.attention-text {
  font-size: 24rpx;
  color: #9a9fae;
}
.two-dimensional-code {
  width: 300rpx;
  height: 300rpx;
  margin: 16rpx auto;
}
.two-dimensional-img {
  width: 100%;
  height: 100%;
  object-fit: cover;
}
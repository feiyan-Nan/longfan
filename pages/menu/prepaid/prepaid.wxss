/* pages/menu/prepaid/prepaid.wxss */
page {
  background-color: #f5f5f5;
}
.tab-h {
  width: 100%;
  box-sizing: border-box;
  overflow: hidden;
  line-height: 80rpx;
  background: #fff;
  font-size: 16px;
  white-space: nowrap;
  position: fixed;
  top: 0;
  left: 0;
  z-index: 99;
}
.tab-item {
  margin: 0 34rpx;
  display: inline-block;
  color: #c8c9cb;
}

.tab-item.active {
  color: #ff5266;
  position: relative;
}
.tab-item.active:after {
  content: "";
  display: block;
  height: 8rpx;
  width: 100%;
  background: #ff5266;
  position: absolute;
  bottom: 0;
  border-radius: 16rpx;
}
.item-ans {
  width: 100%;
  display: flex;
  flex-grow: row no-wrap;
  justify-content: space-between;
  padding: 30rpx;
  box-sizing: border-box;
  height: 180rpx;
  align-items: center;
  border-bottom: 1px solid #F2F2F2;
  background-color: #fff;
}
.avatar {
  width: 100rpx;
  height: 100rpx;
  position: relative;
  padding-right: 30rpx;
}
.avatar .avatar-img {
  width: 90px;
  height: 60px;
}
.avatar-img {
  margin-left: 16px;
  justify-content: center;
}
.avatar .doyen {
  width: 40rpx;
  height: 40rpx;
  position: absolute;
  bottom: -2px;
  right: 20rpx;
}
.expertInfo {
  font-size: 12px;
  flex-grow: 2;
  color: #B0B0B0;
} 
 .expertInfo-name {
  width: 200rpx;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  font-size: 16px;
  color: #000;
  margin-left: 120rpx; 
  border-radius: 60rpx;
  color: #ff5266;
  background-color: #fff1f1;
}
.askBtn {
  width: 200rpx;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  font-size: 16px;
  font-weight: 700;
  border-radius: 60rpx;
  border: 1px solid #f5f5f5;
  color: #ff5266;
  background-color: #fff1f1;
}
.tab-content {
  margin-top: 100rpx;
  padding: 10px 0;
  background-color: #fff;
}
.scoll-h {
  height: 100%;
}
swiper {
  height: 535rpx;
}
.history {
  padding: 0 30px;
}
.h  istory-text {
  font-size: 16px;
  color: #000;
  font-weight: 700;
  margin-left: 30px;
}
.number {
  display: flex;
  padding: 5px 10px;
  flex-grow: row no-wrap;
  justify-content: space-between;
  align-items: center;
  background-color: #fff;
  margin-top: 15px;
  border-radius: 10px;
}
.number-img-box {
  flex: 1;
}
.number-img {
  width: 80px;
  height: 50px;
}
.number-text-box {
  flex: 1;
}
.umber-arrows-box {
  flex: 1;
}
.number-arrows {
  width: 16px;
  height: 16px;
}
  height: 65px;
  background-color: #ffffff;
}
.my-order-left-img {
  float: left;
  width: 30px;
  height: 30px;
  margin: 17px 8px 0 10px;
}
.my-order-left-text {
  float: left;
  font-size: 16px;
  font-weight: 700;
  color: #506082;
}
.my-order-right-text {
  float: right;
  font-size: 16px;
  color: #8c909b;
  margin-right: 28px;
}
.my-order-right-img {
  position: absolute;
  top: 22px;
  right: 6px;

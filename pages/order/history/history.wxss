/* pages/order/history/history.wxss */
page {
  background-color: #f5f5f5;
}
.list-content {
  padding: 30rpx;
}
.item-container {
  background: #ffffff;
  border-radius: 20rpx;
  margin-bottom: 20rpx;
}
.item-box {
  padding: 20rpx;
}
.first-container{
  line-height: 70rpx;
  display: flex;
  justify-content: space-between;
  border-bottom: 1px solid #eee;
  padding-bottom: 10rpx;
}
.item-title {
  color: #354252;
  font-size: 32rpx;
  font-weight: bold;
}
.item-status{
  color: #ff4f6a;
  font-size: 30rpx;
  font-weight: bold;
}
.refund {
  color: #ff9f53;
}
.success{
  color: #48bf30;
}
.sec-container{
  display: flex;
  justify-content: space-between;
  color: #94959a;
  font-size: 30rpx;
  line-height: 60rpx;
  margin-top: 10rpx;
}
.left{
  width: 54%;
}
.right-title {
  color: #383f4f;
  font-size: 30rpx;
  font-weight: bold;
}
.right-amount{
  color: #fe5665;
  font-size: 30rpx;
  font-weight: bold;
}
.thr-container{
  display: flex;
  justify-content: space-between;
}
.item-date{
  font-size: 30rpx;
  color: #94959a;
  line-height: 70rpx;
}
.item-btn{
  border: 1px solid #ff5669;
  width: 30%;
  height: 70rpx;
  text-align: center;
  font-size: 30rpx;
  line-height: 70rpx;
  border-radius: 400rpx;
  color: #ff5669;
}